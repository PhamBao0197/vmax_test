<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="partner_demo_request_tree_view" model="ir.ui.view">
			<field name="name">partner.demo.request.tree</field>
			<field name="model">partner.demo.request</field>
			<field name="arch" type="xml">
				<tree>
					<field name="nguoilienhe"/>
					<field name="sodienthoai"/>
					<field name="email"/>
					<field name="diachi"/>
				</tree>
			</field>
		</record>

		<record id="partner_demo_request_form_view" model="ir.ui.view">
			<field name="name">partner.demo.request.form</field>
			<field name="model">partner.demo.request</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<!-- <button string="Duplicate" type="object" name="duplicate_db" class="oe_highlight"  attrs="{'invisible': [('state', 'in',('done','create_user','draft'))]}"/> -->
						<button string="Draft" type="object" name="action_return" class="oe_highlight" attrs="{'invisible': [('state', '=','draft')]}"/> 
						<!-- <button string="Restore" type="object" name="do_try_type"  class="oe_highlight" attrs="{'invisible': [('state', 'in', ('done','create_user'))]}"/> -->
						<!-- <button string="Create Database" type="object" name="do_try_type"  class="oe_highlight" attrs="{'invisible': [('state', 'in', ('done','create_user'))]}"/> -->
						<button string = "Send Mail" type="object" name="send_email" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('create_restore','draft'))]}"/>

					<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="nganhnghe" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="quymo" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="phanhe" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="date_from" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="remaining_days" attrs="{'readonly':[('state','in',('draft','create_restore','create_user','done'))]}"/>
							</group>
							<group>
								<field name="tencongty" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="nguoilienhe" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="sodienthoai" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="email" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="masothue" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								<field name="diachi" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
								
							</group>
						</group>
						<notebook>
							<page name="partner_try_demo" string="Cấu Hình">
								<group>
									<group>
										<field name="partner_id" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>

										<field name="hostname" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))], 'required':[('try_type','in',('create','restore','duplicate'))]}"/>

										<field name="port" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))], 'required':[('try_type','in',('create','restore','duplicate'))]}"/>
										<label for="try_type"/>
					                        <div class="o_row" name="try_type" >
					                            <field name="try_type" label="0"/>
					                            <span style="padding-left:20px"><button name="next_action" string="Action" type="object" class="oe_highlight"/></span>
					                        </div>
									</group>
									<group attrs="{'invisible':[('try_type','=',False)]}">
										<field name="db_id" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'invisible':[('try_type','in',('create','duplicate',''))]}"/>

										<field name="master_passwd" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))], 'required':[('try_type','in',('create','restore','duplicate'))], 'invisible':[('try_type','=','')]}"/>

										<field name="db_name" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','in',('create','restore','duplicate'))], 'invisible':[('try_type','=','')]}"/>

										<field name="new_db_name" attrs="{'readonly':[('state','in',('create_user','done'))],'required':[('try_type','=','duplicate')],'invisible':[('try_type','in',('create','restore',''))]}"/>

										<field name="email" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore',''))]}"/>

										<field name="passwd" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore',''))]}"/>

										<field name="sodienthoai" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate',''))]}"/>

										<field name="demo_data" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate',''))]}"/>

										<field name="user_ad" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','restore')],'invisible':[('try_type','in',('create','duplicate',''))]}"/>

										<field name="password_ad" attrs="{'readonly':[('state','in',('create_user','done'))],'required':[('try_type','=','restore')],'invisible':[('try_type','in',('create','duplicate',''))]}"/>
									</group>
								</group>
							</page>
							<page string="Logs">
								<field name="log_ids">
									<tree editable="bottom">

										<field name="date_log"/>
										<field name="log"/>
										
									</tree>
								</field>
							</page>
							<page string="User Infor">
								<field name="user_ids">
									<tree editable="bottom">
										<field name="login"/>
										<field name="password"/>
										<field name="name"/>	
							
										<button string="Create User" type="object" name="create_user" class="oe_highlight"/>
										
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
				</form>
			</field>
		</record>

		<record id="action_view_partner_request" model="ir.actions.act_window">
			<field name="name">Demo Request</field>
			<field name="res_model">partner.demo.request</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			  <div class="oe_empty_custom_dashboard">
				  
			  </div>
			</field>
		</record>

		<record id="database_source_demo_tree_view" model="ir.ui.view">
			<field name="name">database.source.tree</field>
			<field name="model">database.source.demo</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="db_zip"/>					
					<field name="user"/>
					<field name="passwd"/>					
					<field name="is_default"/>
				</tree>
			</field>
		</record>

		<record id="database_source_demo_form_view" model="ir.ui.view">
			<field name="name">database.source.form</field>
			<field name="model">database.source.demo</field>
			<field name="arch" type="xml">
				<form>

					<sheet>
						<group>
							<field name="name"/>
							<field name="db_zip"/>
							<field name="user"/>
							<field name="passwd"/>		
							<field name="is_default"/>
						</group>
					</sheet>

				</form>
			</field>
		</record>

		<record id="action_view_database_source_demo" model="ir.actions.act_window">
			<field name="name">Data Base Source</field>
			<field name="res_model">database.source.demo</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			  <div class="oe_empty_custom_dashboard">
				  
			  </div>
			</field>
		</record>

		<!--BUSO Fresher Report Menu-->
		<menuitem 
			id="menu_partner_demo_request"
			name="Partner Demo Request"
			web_icon="ex_request_try_demo,static/src/img/icon.png"
			sequence="5"/>
			<menuitem 
        	id="demo_request_menu"
            name="Demo Request"
            parent="menu_partner_demo_request"
            action="action_view_database_source_demo"
            sequence="5"/>
			<menuitem 
        	id="database_menu"
            name="Database Source Demo"
            parent="menu_partner_demo_request"
            action="action_view_database_source_demo"
            sequence="10"/>

	</data>
</odoo>