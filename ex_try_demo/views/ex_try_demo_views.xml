<?xml version="1.0" encoding="utf-8"?>
<odoo>



		<record id="database_source_demo_tree_view" model="ir.ui.view">
			<field name="name">database.source.tree</field>
			<field name="model">database.source.demo</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="db_zip"/>
					<field name="is_default"/>
				</tree>
			</field>
		</record>

		<record id="database_source_demo_form_view" model="ir.ui.view">
			<field name="name">database.source.form</field>
			<field name="model">database.source.demo</field>
			<field name="arch" type="xml">
				<form>

<!-- 					<div class="form-group">

						<label for="db_zip" class="col-form-label">File Database</label>
						<input ip="db_zip" type='file' name="db_zip" class="required"/>

					</div> -->

					<sheet>
						<group>
							<field name="name"/>
							<field name="db_zip"/>
							<field name="is_default"/>
						</group>
					</sheet>

				</form>
			</field>
		</record>


		<record id="action_view_database_source_demo" model="ir.actions.act_window">
			<field name="name">Data Base Source</field>
			<field name="res_model">database.source.demo</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			  <div class="oe_empty_custom_dashboard">
				  
			  </div>
			</field>
		</record>



		<record id="partner_try_demo_tree_view" model="ir.ui.view">
			<field name="name">partner.try.demo.tree</field>
			<field name="model">partner.try.demo</field>
			<field name="arch" type="xml">
				<tree>
							<field name="hostname"/>
							<field name="port"/>
							<field name="try_type"/>
							
				</tree>
			</field>
		</record>


		<record id="database_source_demo_form_view" model="ir.ui.view">
			<field name="name">partner.try.demo.form</field>
			<field name="model">partner.try.demo</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button string="Duplicate" type="object" name="duplicate_db" class="oe_highlight"  attrs="{'invisible': [('state', 'in',('done','create_user','draft'))]}"/>
						<button string="Draft" type="object" name="action_return" class="oe_highlight" attrs="{'invisible': [('state', '=','draft')]}"/> 
						<button string="Restore" type="object" name="do_try_type"  class="oe_highlight" attrs="{'invisible': [('state', 'in', ('done','create_user'))]}"/>
						<button string="Create Database" type="object" name="do_try_type"  class="oe_highlight" attrs="{'invisible': [('state', 'in', ('done','create_user'))]}"/>
						<button string = "Send Mail" type="object" name="send_email" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('create_restore','draft'))]}"/>

					<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
						<group>
							<field name="partner_id" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
							<field name="hostname" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
							<field name="port" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
							<field name="try_type" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
						</group>
						<group>
							<field name="db_id" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'invisible':[('try_type','in',('create','duplicate'))]}"/>
							<field name="master_passwd" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
							<field name="db_name" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))]}"/>
							<field name="new_db_name" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','duplicate')],'invisible':[('try_type','in',('create','restore'))]}"/>
							<field name="email" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate'))]}"/>
							<field name="passwd" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate'))]}"/>
							<field name="phone" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate'))]}"/>
							<field name="demo_data" attrs="{'readonly':[('state','in',('create_restore','create_user','done'))],'required':[('try_type','=','create')],'invisible':[('try_type','in',('restore','duplicate'))]}"/>
						</group>
						</group>
						<notebook>
							<page string="Logs">
								<field name="log_ids">
									<tree editable="bottom">

										<field name="date_log"/>
										<field name="log"/>
										
									</tree>
								</field>
							</page>
							<page string="User Infor">
								<field name="user_ids">
									<tree editable="bottom">
										<field name="login"/>
										<field name="password"/>
										<field name="name"/>	
							
										<button string="Create User" type="object" name="create_user" class="oe_highlight"/>
										
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>



		<record id="action_view_partner_try_demo" model="ir.actions.act_window">
			<field name="name">Partner Try Demo</field>
			<field name="res_model">partner.try.demo</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			  <div class="oe_empty_custom_dashboard">
				  
			  </div>
			</field>
		</record>



		<menuitem 
			id="database_source_menu_root"
			name="Demo Management"
			sequence="2"/>

		    <menuitem 
        	id="database_menu"
            name="Database Source Demo"
            parent="database_source_menu_root"
            action="action_view_database_source_demo"
            sequence="2"/>

           	<menuitem 
        	id="partner_try_menu"
            name="Partner Try Demo"
            parent="database_source_menu_root"
            action="action_view_partner_try_demo"
            sequence="1"/>


</odoo>